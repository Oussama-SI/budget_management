    <record id="view_project_financial_axis_budget_line_grid_form" model="ir.ui.view">
        <field name="name">project.financial.axis.budget.line.grid.form</field>
        <field name="model">project.financial.axis.budget.line</field>
        <field name="arch" type="xml">
            <form string="Saisie une ligne">
            <group>
                <group>
                    <field name="axis_id" required="1" domain="[('project_financial_id', '=', context.get('default_project_financial_id'))]"/>
                    <field name="date" required="1"/>
                </group>
                <group>
                    <field name="planned_budget" required="1" string="Coùt Planifier" invisible="context.get('field_budget')"/>
                </group>
            </group>
                <!-- <footer>
                    <button name="save_and_close" string="Enregistrer" type="object" class="btn-primary"/>
