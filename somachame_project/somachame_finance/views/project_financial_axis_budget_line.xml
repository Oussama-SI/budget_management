<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_financial_axis_budget_line_grid" model="ir.ui.view">
        <field name="name">project.financial.axis.budget.line.grid</field>
        <field name="model">project.financial.axis.budget.line</field>
        <field name="arch" type="xml">
            <grid string="Évolution Temporelle des Axes"
                create_inline="1"
                editable="bottom"
                barchart_total="true"
                sample="1">
                <field name="axis_id" type="row"/>
                <field name="axis_budget_id" type="row"/>
                <field name="date" type="col">
                    <range name="year" string="Années" span="year" step="month"/>
                    <range name="month" string="Mois" span="month" step="day"/>
                </field>
                <field name="planned_budget" string="Valeur Planifiée" type="measure"/>
            </grid>
        </field>
    </record>

